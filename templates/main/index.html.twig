{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div class="container">
		<section class="row">
			<div class="col-12">
				<h1>site ecommerce</h1>
				<p>Bonjour nous sommes sur la vue du mainController</p>
			</div>
			{% for category in categories %}
				{% if category.parent == null %}

					<div class="col-12">
						<h2>{{category.name}}</h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card h-100">
							<div class="card-body">
								<h3 class="card-title">{{category.name}}</h3>
								<a href="{{path('categories_list',{slug:category.slug})}}" class="btn btn-primary">Voir les produits</a>
								<!--liens permettant dacceder a la liste des categories en fonction du slug-->
							</div>
						</div>
					</div>
				{% endif %}

			{% endfor %}

{% endblock %}
