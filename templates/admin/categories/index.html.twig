{% extends "base.html.twig" %}
{% block title %}Listes de categories
{% endblock %}
{% block body %}

	<div class="container">
		<div class="row">
			{% include "_partials/_adminav.html.twig" %}
			<main class="col-9 border border-light bg-white p-2">
				<h1>Welcome! page liste des cat√©gories</h1>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>NOM</th>
							<th>Parent</th>
							<th>Slug</th>
							<th>ORDRE</th>
						</tr>
					</thead>
                    <tbody>
                      {% for categorie in categories %}
                        <tr>
                        <td>{{categorie.id}}</td>
                        <td>{{categorie.name}}</td>
                        <td>
                        {% if categorie.parent is not null %}
                            {{categorie.parent.name}}
                        {% endif %}
                        </td>
                        <td>{{categorie.slug}}</td>
                        <td>{{categorie.categoryOrder}}</td>
                        </tr>
                      {% endfor %}
                    </tbody>
				</table>
			</main>
		</div>
	</div>
{% endblock %}
