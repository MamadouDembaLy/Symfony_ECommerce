	<body>
		{# ON VERIFIE SI L'UTILISATEUR EST CONNECTE ET ON VERIFIE SI LE COMPTE EST ACTIVE#}
		{% if app.user and app.user.isVerified == false %}
			<div class="alert alert-warning alert-dismissible" role="alert">
				<button type="button" class="btn-close" data-bs-dismissible="alert" aria-label="close"></button>
				<div class="alert-message">
					<strong>Votre compte n'est pas activé
					</strong>,<a href="{{path('resend_verif')}}">renvoyer le liens d'activation</a>
				</div>
			</div>
		{% endif %}

		{# inclusion du fichier flash qui affiche nos messages#}
